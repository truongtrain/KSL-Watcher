<h3>Please Login</h3>

<%= form_with url: login_path, scope: 'login', method: :post, local: true do |form| %>

    <%= form.label :email %>
    <%= form.text_field :email, placeholder: 'john@email.com' %>
    <%= form.submit "Login", class: 'btn btn-primary' %>
    <%= link_to 'Cancel', external_root_path, class: 'btn btn-default'  %>

  <div class='padded-box'>
    Not yet signed up?  <%= link_to 'Register', new_user_path, class: 'btn btn-default' %>
  </div> 
<% end %>


